<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apps.ahqmrf.onlychat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".app.OnlyChat"
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SearchUserActivity"
            android:label="Search User" />
        <activity
            android:name=".activity.SignInActivity"
            android:label="Sign in" />
        <activity
            android:name=".activity.SignUpActivity"
            android:label="@string/sign_up" />
        <activity android:name=".activity.ChatActivity" />
        <activity android:name=".activity.SettingsActivity" android:label="Settings"/>
        <activity android:name=".activity.ChangeColorActivity" android:label="Change color"/>
        <activity android:name=".activity.ViewProfileActivity" android:label="Profile"/>
    </application>

</manifest>